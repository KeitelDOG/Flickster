<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivMovieImage"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@mipmap/ic_launcher"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/ivMovieImage"
        android:layout_marginLeft="0dp"
        android:layout_centerVertical="true">
i
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Ninja Turtles 2"
            android:id="@+id/tvTitle"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/ivMovieImage"
            android:layout_toEndOf="@+id/ivMovieImage" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="An epic movie that continue to charms us as the 2nd chapter is release. Now the 4 Ninja Turtles has taken over the town to bring the peace back"
            android:id="@+id/tvOverview"
            android:layout_below="@+id/tvTitle"
            android:layout_toRightOf="@+id/ivMovieImage"
            android:layout_toEndOf="@+id/ivMovieImage" />
    </LinearLayout>
</RelativeLayout>